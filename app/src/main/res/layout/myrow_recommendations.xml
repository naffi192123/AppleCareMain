<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"

android:id="@+id/recommandCard17"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="16dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/recommendCard1Heading17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:text="Carbondazim 50% WP"
        android:textColor="@color/Green_1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recommendCard1Description17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mybutton117"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:letterSpacing="0.05"
        android:lineHeight="20dp"
        android:text="@string/recomTemp" />

    <android.widget.Button
        android:id="@+id/mybutton117"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommendCard1Heading17"
        android:background="@drawable/buttonborder"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="16dp"
        android:paddingBottom="5sp"
        android:text="Fungicide"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <android.widget.Button
        android:id="@+id/mybuttonBordered117"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommendCard1Description17"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/borderedbutton"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="16dp"
        android:paddingBottom="5sp"
        android:text="More"
        android:textColor="@color/Green_1"
        android:textSize="10sp" />
</RelativeLayout>
</androidx.cardview.widget.CardView>